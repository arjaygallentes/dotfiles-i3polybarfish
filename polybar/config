; Polybar config
;
; Created by 0xelectron
;

; Get colors from Xresources
[colors]
background = ${xrdb:background}
foreground = ${xrdb:foreground}
color3 = ${xrdb:color3}
color5 = ${xrdb:color5}
color7 = ${xrdb:color7}
color9 = ${xrdb:color9}
color12 = ${xrdb:color12}


; Variables
[variables]
padding = 2



; Global
[global/wm]
margin-top = 0
margin-bottom = 0



; Top Bar
[bar/top]

font-0 = Roboto:weight=Regular:size=10;1
font-1 = MaterialIcons:size=12;2
font-2 = FontAwesome:size=12;2

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

width = 100%
height = 25

background = ${colors.background}
foreground = ${colors.foreground}

;line-color = ${xrdb:foreground}
;line-size = 10

spacing = 2
module-margin = 1

modules-left = i3
modules-center = date
modules-right = volume wired-network powermenu


; i3 Module
[module/i3]
type = internal/i3

; Create scroll handlers used to cycle workspaces
; Default: true
enable-scroll = false

; Wrap around when reaching the first/last workspace
; Default: true
wrapping-scroll = false

; Sort the workspaces by index instead of the default
; sorting that groups the workspaces by output
; Default: false
index-sort = true

; Set the scroll cycle direction
; Default: true
reverse-scroll = false

; Use fuzzy (partial) matching on labels when assigning
; icons to workspaces
; Example: code;♚ will apply the icon to all workspaces
; containing 'code' in the label
; Default: false
;fuzzy-match = false

; Available tags:
;   <label-state> (default) - gets replaced with <label-(focused|unfocused|visible|urgent)>
;   <label-mode> (default)
format = <label-state> <label-mode>

; ws-icon-[0-9]+ = label;icon
; NOTE: The label needs to match the name of the i3 workspace
ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-4 = 5;
ws-icon-5 = 6;
ws-icon-6 = 7;
ws-icon-7 = 8;
ws-icon-8 = 9;
ws-icon-9 = 10;
; ws-icon-9 = 10;
ws-icon-default = 

; Available tokens:
;   %mode%
; Default: %mode%
label-mode = %mode%
label-mode-padding = ${variables.padding}
label-mode-background = ${colors.color3}

; Available tokens:
;   %name%
;   %icon%
;   %index%
;   %output%
; Default: %icon%  %name%
label-focused = %icon%
label-focused-foreground = ${colors.background}
label-focused-background = ${colors.foreground}
label-focused-underline = ${colors.color3}
label-focused-padding = ${variables.padding}

; Available tokens:
;   %name%
;   %icon%
;   %index%
; Default: %icon%  %name%
label-unfocused = %index%
label-unfocused-padding = ${variables.padding}

; Available tokens:
;   %name%
;   %icon%
;   %index%
; Default: %icon%  %name%
label-visible = %icon%
label-visible-underline = ${colors.color3}
label-visible-padding = ${variables.padding}

; Available tokens:
;   %name%
;   %icon%
;   %index%
; Default: %icon%  %name%
label-urgent = %icon%
label-urgent-foreground = ${colors.color7}
label-urgent-background = ${colors.color3}
label-urgent-padding = ${variables.padding}

; Cpu Module
[module/cpu]
type = internal/cpu

; Seconds to sleep between updates
; Default: 1
interval = 0.5

format = <label> <ramp-coreload>

; Available tokens:
;   %percentage% (default) - total cpu load
;   %percentage-cores% - load percentage for each core
;   %percentage-core[1-9]% - load percentage for specific core
label = CPU

ramp-coreload-0 = ▁
ramp-coreload-0-font = 2
ramp-coreload-0-foreground = ${colors.color12}
ramp-coreload-1 = ▂
ramp-coreload-1-font = 2
ramp-coreload-1-foreground = ${colors.color12}
ramp-coreload-2 = ▃
ramp-coreload-2-font = 2
ramp-coreload-2-foreground = ${colors.color9}
ramp-coreload-3 = ▄
ramp-coreload-3-font = 2
ramp-coreload-3-foreground = ${colors.color9}
ramp-coreload-4 = ▅
ramp-coreload-4-font = 2
ramp-coreload-4-foreground = ${colors.color7}
ramp-coreload-5 = ▆
ramp-coreload-5-font = 2
ramp-coreload-5-foreground = ${colors.color7}
ramp-coreload-6 = ▇
ramp-coreload-6-font = 2
ramp-coreload-6-foreground = ${colors.color5}
ramp-coreload-7 = █
ramp-coreload-7-font = 2
ramp-coreload-7-foreground = ${colors.color5}



; Memory Module
[module/memory]
type = internal/memory
format = <label> <bar-used>
label = RAM

bar-used-width = 30
bar-used-foreground-0 = ${colors.color12}
bar-used-foreground-1 = ${colors.color9}
bar-used-foreground-2 = ${colors.color7}
bar-used-foreground-3 = ${colors.color5}
bar-used-indicator = |
bar-used-indicator-font = 2
bar-used-indicator-foreground = ${colors.foreground}
bar-used-fill = ─
bar-used-fill-font = 2
bar-used-empty = ─
bar-used-empty-font = 2
bar-used-empty-foreground = ${colors.foreground}



; Network Module
[module/wired-network]
type = internal/network
interface = enp3s0
interval = 3.0

label-connected = 
label-disconnected = 
label-disconnected-foreground = ${colors.foreground}



; Volume Module
[module/volume]
type = internal/volume

format-volume = <ramp-volume>
label-muted =   muted
label-muted-foreground = ${colors.foreground}

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
ramp-volume-3 = 



; Arch Updates Module
#[module/arch_updates]
#type = custom/script
#interval = 3600
#format = <label>
#label = "%output:0:15%"
#exec = "~/.config/scripts/arch_updates.sh &"
#exec-if = "ping -q -w 2 -c 1 8.8.8.8 > /dev/null"


; Date Module
[module/date]
type = internal/date

; Seconds to sleep between updates
interval = 1.0

; See "man date" for details on how to format the date string
; NOTE: if you want to use syntax tags here you need to use %%{...}
;date = %Y-%m-%d

; Optional time format
time = %H:%M

; if `date-alt` or `time-alt` is defined, clicking
; the module will toggle between formats
date-alt = %A, %d %B %Y
time-alt = %H:%M:%S

; Available tags:
;   <label> (default)
format =  <label>
format-background = ${colors.background}
format-foreground = ${colors.foreground}

; Available tokens:
;   %date%
;   %time%
; Default: %date%
label = %date% %time%
label-foreground = ${colors.foreground}



; PowerMenu
[module/powermenu]
type = custom/menu

format-padding = ${variables.padding}

label-open = 
label-close = 
label-separator = " - "


menu-0-0 = Suspend
menu-0-0-foreground = ${colors.foreground}
menu-0-0-exec = systemctl suspend
menu-0-1 = Reboot
menu-0-1-foreground = ${colors.foreground}
menu-0-1-exec = systemctl reboot
menu-0-2 = Power off
menu-0-2-foreground = ${colors.foreground}
menu-0-2-exec = systemctl poweroff
